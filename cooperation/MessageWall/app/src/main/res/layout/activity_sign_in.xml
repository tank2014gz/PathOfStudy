<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/actionbar_title_color">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#ffffff">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/account"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>
                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_item"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:hint="手机号"
                        android:textColor="@android:color/darker_gray"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#ffffff">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lock"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>

                    <EditText
                        android:id="@+id/user_psd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_item"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:hint="请输入密码"
                        android:textColor="@android:color/darker_gray"
                        android:textColorHint="@android:color/darker_gray"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:background="#ffffff">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                    <TextView
                        android:id="@+id/tv_signup"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:paddingRight="16dp"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:textSize="14sp"
                        android:textColor="@color/actionbar0"
                        android:text="注册"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="登陆"
                android:background="?attr/appBkg0"
                android:textColor="@color/actionbar_title_color"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="96dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:text="第三方平台登陆"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginRight="32dp"
                android:background="@drawable/login_qq"
                android:id="@+id/login_qq"/>
            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/login_weibo"
                android:id="@+id/login_weibo"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
