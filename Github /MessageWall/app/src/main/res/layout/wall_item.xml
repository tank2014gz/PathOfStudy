<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/actionbar_title_color">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.example.db.messagewall.view.CircleButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    app:cb_color="?attr/appBkg0"
                    app:cb_pressedRingWidth="0dp"
                    android:id="@+id/circlebutton"
                    >
                </com.example.db.messagewall.view.CircleButton>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/actionbar_title_color"
                    android:text="U"
                    android:gravity="center"
                    android:id="@+id/text"/>
            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/actionbar0"
                    android:text="UniqueStudio"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/wall_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="是个温暖有爱的地方"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:ellipsize="middle"
                        android:maxLines="1"
                        android:id="@+id/wall_description"
                        android:textColor="@android:color/darker_gray"
                        />
                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="32dp"
                        android:textSize="15sp"
                        android:text=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:ellipsize="middle"
                        android:maxLines="1"
                        android:id="@+id/wall_count"
                        android:textColor="@android:color/darker_gray"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>
