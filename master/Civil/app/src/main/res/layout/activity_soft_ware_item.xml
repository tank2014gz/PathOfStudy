<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.db.civil.activity.RuleItemActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:background="#24ba91">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#24ba91">
        <Button
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/kind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:text="规范详情"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <com.example.db.civil.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rule_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:hint="规范"
                    android:textStyle="bold"
                    android:textColor="#24ba91"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="64dp"
                    android:layout_gravity="center"
                    android:gravity="top|left"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:id="@+id/details"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
                <Button
                    android:id="@+id/download"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:paddingLeft="18dp"
                    android:textColor="#24ba91"
                    android:background="@drawable/bkg"
                    android:textSize="13sp"
                    android:text="下载"
                    android:autoLink="all"
                    android:drawableLeft="@drawable/userinfo_relationship_indicator_download_default"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.example.db.civil.view.OverScrollView>
</LinearLayout>

