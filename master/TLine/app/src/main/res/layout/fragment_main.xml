<com.example.db.tline.view.RevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/reveal_layout"
    tools:context=".MainActivity$PlaceholderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#24ba91">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/login"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="@drawable/logo_actionbar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RadioGroup
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="64dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="33dp"
                        android:id="@+id/radio_picture"
                        android:button="@null"
                        android:background="@drawable/ratio_bkg_left_pressed"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/actionbar"
                        android:text="图片"/>
                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="33dp"
                        android:button="@null"
                        android:id="@+id/ratio_text"
                        android:background="@drawable/ratio_my"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/white_pressed"
                        android:text="文字"/>
                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="33dp"
                        android:button="@null"
                        android:id="@+id/ratio_my"
                        android:background="@drawable/ratio_bkg_right"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/white_pressed"
                        android:text="我的"/>

                    </RadioGroup>
                </LinearLayout>
            <Button
                android:id="@+id/search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/abc_ic_search_api_mtrl_alpha"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>
            <Button
                android:id="@+id/btn_more"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/guide_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <com.example.db.tline.floatingactionbutton.FloatingActionsMenu
                    android:id="@+id/multiple_actions_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="16dp"
                    fab:fab_addButtonColorNormal="@color/pink"
                    fab:fab_addButtonColorPressed="@color/white_pressed"
                    fab:fab_addButtonSize="normal"
                    fab:fab_addButtonPlusIconColor="@color/half_black"
                    fab:fab_addButtonStrokeVisible="false"
                    fab:fab_expandDirection="up"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp">
                    <com.example.db.tline.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_colorNormal="@color/pink"
                        fab:fab_title="hahahh"
                        fab:fab_colorPressed="@color/white_pressed"
                        fab:fab_size="normal"
                        fab:fab_icon="@drawable/fab_new_img"
                        android:id="@+id/edit_picture"/>
                    <com.example.db.tline.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_colorNormal="@color/white"
                        fab:fab_colorPressed="@color/white_pressed"
                        fab:fab_size="normal"
                        fab:fab_icon="@drawable/fab_new_text"
                        android:id="@+id/edit_text"/>
                    <com.example.db.tline.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        fab:fab_colorNormal="@color/pink"
                        fab:fab_colorPressed="@color/white_pressed"
                        fab:fab_size="normal"
                        fab:fab_icon="@drawable/fab_new_post"
                        android:id="@+id/add"/>
                </com.example.db.tline.floatingactionbutton.FloatingActionsMenu>
                </FrameLayout>

            </LinearLayout>
    </LinearLayout>
</com.example.db.tline.view.RevealLayout>
