<com.example.db.tline.view.RevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/reveal_layout"
    tools:context=".MainActivity$PlaceholderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#24ba91">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/login"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="@drawable/fab_vote"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center|left"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="最美时光轴"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                </LinearLayout>
            <Button
                android:id="@+id/search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/abc_ic_search_api_mtrl_alpha"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>
            <Button
                android:id="@+id/btn_more"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#24ba91">
                    <TextView
                        android:id="@+id/picture"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="图片"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="文字"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="个人"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/article_bar"
                        android:orientation="horizontal">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/picture_bar"
                        android:orientation="horizontal">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/music_bar"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/guide_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <com.example.db.tline.floatingactionbutton.FloatingActionsMenu
                    android:id="@+id/multiple_actions_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="16dp"
                    fab:fab_addButtonColorNormal="@color/pink"
                    fab:fab_addButtonColorPressed="@color/white_pressed"
                    fab:fab_addButtonSize="normal"
                    fab:fab_addButtonPlusIconColor="@color/half_black"
                    fab:fab_addButtonStrokeVisible="false"
                    fab:fab_expandDirection="up"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp">
                    <com.example.db.tline.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_colorNormal="@color/pink"
                        fab:fab_title="hahahh"
                        fab:fab_colorPressed="@color/white_pressed"
                        fab:fab_size="normal"
                        fab:fab_icon="@drawable/fab_new_img"
                        android:id="@+id/edit_picture"/>
                    <com.example.db.tline.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_colorNormal="@color/white"
                        fab:fab_colorPressed="@color/white_pressed"
                        fab:fab_size="normal"
                        fab:fab_icon="@drawable/fab_new_text"
                        android:id="@+id/edit_text"/>
                    <com.example.db.tline.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        fab:fab_colorNormal="@color/pink"
                        fab:fab_colorPressed="@color/white_pressed"
                        fab:fab_size="normal"
                        fab:fab_icon="@drawable/fab_new_post"
                        android:id="@+id/add"/>
                </com.example.db.tline.floatingactionbutton.FloatingActionsMenu>
                </FrameLayout>

            </LinearLayout>
    </LinearLayout>
</com.example.db.tline.view.RevealLayout>
