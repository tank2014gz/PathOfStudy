<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_item"
    tools:context="com.example.db.tline.fragment.AppLockFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.example.db.tline.view.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reveal_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="请输入密码验证"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/psd_one"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/psd_item"/>
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/psd_two"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/psd_item"/>
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/psd_three"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/psd_item"/>
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/psd_four"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/psd_item"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="32dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_seven"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="7"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_eight"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="8"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_nine"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="9"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_four"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="4"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_five"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="5"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_six"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="6"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_one"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="1"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_two"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="2"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_three"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/clear_day_colored"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="3"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="32dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:id="@+id/btn_ok"
                android:layout_gravity="center"
                android:background="@drawable/tree_view"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="确定"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            </LinearLayout>
    </LinearLayout>
    </com.example.db.tline.view.RevealLayout>
</FrameLayout>
