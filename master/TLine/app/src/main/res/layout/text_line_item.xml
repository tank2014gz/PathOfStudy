<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="#fafafa">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="#24ba91"
                android:textSize="14sp"
                android:text="时光轴"
                android:paddingLeft="16dp"
                android:layout_marginRight="16dp"/>
            <TextView
                android:id="@+id/clock"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:paddingLeft="12dp"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:text="21:51"
                android:drawableLeft="@drawable/ic_followers"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bkg"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:maxLines="4"
                android:lineSpacingMultiplier="1.2"
                android:ellipsize="end"
                android:gravity="top|left"
                android:padding="16dp"
                android:text="要把界面做的很美，功能做的细腻"
                android:textSize="16sp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="32dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:background="#fafafa"
                    android:layout_gravity="bottom"
                    android:paddingLeft="8dp"
                    android:drawableLeft="@drawable/ic_event_location"/>
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:paddingTop="2dp"
                    android:maxLines="4"
                    android:lineSpacingMultiplier="1.2"
                    android:ellipsize="end"
                    android:text="湖北省武汉市"
                    android:textSize="13sp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="36dp"
                android:layout_height="36sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:paddingLeft="12dp"
                android:background="#fafafa"
                android:drawableLeft="@drawable/icon_more_gray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:id="@+id/btn_share"
                android:layout_width="36dp"
                android:layout_height="36sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:background="#fafafa"
                android:paddingLeft="4dp"
                android:drawableLeft="@drawable/ic_shared"/>


        </LinearLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
