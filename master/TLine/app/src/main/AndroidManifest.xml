<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.db.tline" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_actionbar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".activity.TLineDetailsActivity"
            android:label="@string/title_activity_tline_details" >
        </activity>
        <activity
            android:name=".activity.EditTlineDetailsActivity"
            android:label="@string/title_activity_edit_tline_details" >
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name=".activity.HomePagerActicity"
            android:label="@string/title_activity_home_pager_acticity" >
        </activity>
        <activity
            android:name=".activity.PLineDetailsActivity"
            android:label="@string/title_activity_pline_details" >
        </activity>
        <activity
            android:name=".activity.EditPLineDetailsActivity"
            android:label="@string/title_activity_edit_pline_details" >
        </activity>
    </application>

</manifest>
