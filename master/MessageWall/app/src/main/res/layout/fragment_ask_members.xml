<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.db.messagewall.fragment.AskMembersFragment"
    android:background="@color/actionbar_title_color">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="输入被邀请人的手机号"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    android:textColor="@color/actionbar0"/>
                <com.example.db.messagewall.view.materialedittext.MaterialEditText
                    android:id="@+id/edit_ask_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/actionbar0"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="手机号"
                    android:cursorVisible="false"
                    app:hideUnderline="true"
                    app:baseColor="@android:color/darker_gray"
                    app:floatingLabel="highlight"
                    app:maxCharacters="16"
                    app:minCharacters="1"
                    app:errorColor="@color/error"
                    app:helperText=""
                    app:primaryColor="#f3f3f3"
                    app:singleLineEllipsis="true"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/btn_fab"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="邀请"
            android:background="@drawable/border_selector"
            android:textColor="@color/actionbar_title_color"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:text="分享留言墙二维码(点击图片分享)"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:textSize="16sp"
                        android:textColor="@color/actionbar0"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_gravity="center"
                        android:src="@drawable/code"
                        android:scaleType="fitXY"
                        android:id="@+id/edit_ask_code"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>
