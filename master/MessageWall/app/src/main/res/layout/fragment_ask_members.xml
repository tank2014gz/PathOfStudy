<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.db.messagewall.fragment.AskMembersFragment"
    android:background="@color/actionbar_title_color">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:id="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="输入被邀请人的手机号"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/actionbar0"/>
            <com.example.db.messagewall.view.materialedittext.MaterialEditText
                android:id="@+id/edit_ask_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/actionbar0"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColorHint="@android:color/darker_gray"
                android:hint="手机号"
                android:cursorVisible="false"
                app:hideUnderline="true"
                app:baseColor="@android:color/darker_gray"
                app:floatingLabel="highlight"
                app:maxCharacters="16"
                app:minCharacters="1"
                app:errorColor="@color/error"
                app:helperText=""
                app:primaryColor="#f3f3f3"
                app:singleLineEllipsis="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="or"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/actionbar0"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="分享留言墙二维码"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/actionbar0"/>
                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_refresh"
                    android:orientation="vertical"
                    android:background="@drawable/circle_unpressed">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_restore_white_24dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_share"
                    android:orientation="vertical"
                    android:background="@drawable/circle_unpressed">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@drawable/code"
                    android:scaleType="fitXY"
                    android:id="@+id/edit_ask_code"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom|end"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_done"/>
</FrameLayout>
