<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/actionbar_title_color"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <com.example.db.messagewall.view.CircleImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/head_xiaoqiang_m"
                    android:id="@+id/person_logo"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:textColor="@color/actionbar0"
                        android:textSize="16sp"
                        android:text="昵称"
                        android:paddingLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="哈哈哈"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/nichen"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:textColor="@color/actionbar0"
                        android:textSize="16sp"
                        android:text="手机号"
                        android:paddingLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="哈哈哈"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/phone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:textColor="@color/actionbar0"
                        android:textSize="16sp"
                        android:text="加入时间"
                        android:paddingLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="哈哈哈"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/date"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/btn_loginout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="退出账号"
            android:background="?attr/appBkg0"
            android:textColor="@color/actionbar_title_color"/>
    </LinearLayout>

</LinearLayout>
