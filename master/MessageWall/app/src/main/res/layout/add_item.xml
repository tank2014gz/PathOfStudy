<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.example.db.messagewall.view.materialedittext.MaterialEditText
        android:id="@+id/edit_wall_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/actionbar0"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:textColorHint="@android:color/darker_gray"
        android:hint="输入邮箱"
        android:cursorVisible="false"
        app:hideUnderline="true"
        app:baseColor="@android:color/darker_gray"
        app:floatingLabel="highlight"
        app:maxCharacters="48"
        app:minCharacters="1"
        app:errorColor="@color/error"
        app:helperText="必填"
        app:helperTextColor="@color/actionbar0"
        app:primaryColor="#f3f3f3"
        app:singleLineEllipsis="true"/>
</LinearLayout>
