<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.support.android.designlibdemo" >

    <!-- 权限-->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo"
        android:name="com.example.db.messagewall.api.AppData">

        <!-- 配置leancloud的群组环境-->
        <service android:name="com.avos.avoscloud.PushService"
            android:exported="true" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>


        <activity android:name="com.example.db.messagewall.activity.MainActivity"
            android:theme="@style/nLiveoDrawer">
        </activity>
        <activity android:name="com.example.db.messagewall.activity.CheeseDetailActivity" />
        <activity
            android:name="com.example.db.messagewall.activity.SelectActivity"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.db.messagewall.activity.AddMessageWallActivity"
            android:label="@string/title_activity_add_message_wall"
            android:theme="@style/nLiveoDrawer">
        </activity>
        <activity android:name="com.example.db.messagewall.activity.SignInActivity"
            android:theme="@style/nLiveoDrawer"></activity>
        <activity android:name="com.example.db.messagewall.activity.SignUpActivity"
            android:theme="@style/nLiveoDrawer"></activity>
    </application>

</manifest>
